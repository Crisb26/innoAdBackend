<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 https://maven.apache.org/xsd/settings-1.0.0.xsd">
  <mirrors>
    <!-- Primary: Maven Central -->
    <mirror>
      <id>central-mirror</id>
      <name>Maven Central Direct</name>
      <url>https://repo.maven.apache.org/maven2</url>
      <mirrorOf>central</mirrorOf>
    </mirror>

    <!-- Fallback: Google Maven Mirror (más rápido en algunos casos) -->
    <mirror>
      <id>google-maven</id>
      <name>Google Maven Central Mirror</name>
      <url>https://maven-central.storage-download.googleapis.com/maven2/</url>
      <mirrorOf>central</mirrorOf>
    </mirror>
  </mirrors>

  <profiles>
    <profile>
      <id>docker-build</id>
      <properties>
        <!-- Aumentar reintentos para Docker builds -->
        <maven.wagon.http.retryHandler.count>5</maven.wagon.http.retryHandler.count>
        <maven.wagon.http.pool>false</maven.wagon.http.pool>
        <!-- Timeouts más largos -->
        <maven.wagon.httpconnectionManager.ttlSeconds>120</maven.wagon.httpconnectionManager.ttlSeconds>
        <maven.wagon.http.connectionTimeout>60000</maven.wagon.http.connectionTimeout>
        <maven.wagon.http.readTimeout>60000</maven.wagon.http.readTimeout>
      </properties>
      <repositories>
        <repository>
          <id>spring-releases</id>
          <name>Spring Releases</name>
          <url>https://repo.spring.io/release</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
        </repository>
      </repositories>
    </profile>
  </profiles>

  <activeProfiles>
    <activeProfile>docker-build</activeProfile>
  </activeProfiles>
</settings>
